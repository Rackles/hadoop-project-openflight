<workflow-app name="OpenAnalysisWorkflow" xmlns="uri:oozie:workflow:0.4">
    <start to="PigAction"/>
    <action name="PigAction">
        <pig>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${name-node}</name-node>
            <prepare>
                <delete path="${pigOutputPath}"></delete>
            </prepare>

            <script>${pigScript}</script>
                <argument>-param</argument>
                <argument>airportsLocation=${airportsLocation}</argument>
                <argument>-param</argument>
                <argument>airlinesLocation=${airlinesLocation}</argument>
                <argument>-param</argument>
                <argument>routesLocation=${routesLocation}</argument>
                <argument>-param</argument>
                <argument>planesLocation=${planesLocation}</argument>
                <argument>-param</argument>
                <argument>outputLocation=${outputLocation}</argument>
                <argument>-param</argument>
                <argument>n=${n}</argument>
        </pig>
        <ok to="SQLAction"/>
        <error to="PigKill"/>
    </action>
    <action name="SQLAction">
        <shell xmlns="uri:oozie:shell-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${name-node}</name-node>
            <exec>${sqlScript}</exec>
            <file>${sqlScript}</file>
        </shell>
        <ok to="SqoopAction"/>
        <error to="SQLKill"/>
    </action>
    <action name="SqoopAction">
        <sqoop xmlns="uri:oozie:sqoop-action:0.2">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${name-node}</name-node>
            <command>sqoop export --connect jdbc:postgresql://193.196.37.32:5432/openanalysis --username postgres --password admin -m 1 --table ${TableName} --export-dir ${exportDir} --input-fields-terminated-by ',' --input-null-string '\\N' --input-null-non-string '\\N'
            </command>
        </sqoop>
        <ok to="end"/>
        <error to="SqoopKill"/>
    </action>
    <kill name="PigKill">
        <message>Pig Action Failed, error message
            [${wf:errorMessage(wf:lastErrorNode())}]
        </message>
    </kill>
    <kill name="SQLKill">
        <message>SQL Action Failed, error message
            [${wf:errorMessage(wf:lastErrorNode())}]
        </message>
    </kill>
    <kill name="SqoopKill">
        <message>Sqoop Action Failed, error message
            [${wf:errorMessage(wf:lastErrorNode())}]
        </message>
    </kill>
    <end name="end"/>
</workflow-app>